{%
    set NOMBRE_EMPRESA = "Ferretería Antártida"
%}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="shortcut icon" type="images/png" href="{{asset('images/logo.png')}}">
        <title>{% block title %}{% endblock %}{{ NOMBRE_EMPRESA }}</title>
        <link type="text/css" rel="stylesheet" href="{{asset('css/estilos.css')}}">
        <script src="{{asset('js/oGenerales.js')}}"></script>
    </head>
    <body>
        <header>
            <div class="logo"><img src="{{asset('images/logo.png')}}" alt="" /></div>
            {% if app.user %}
                <div class="saludo">Bienvenido/a {{ app.user.nombre }} {{ app.user.apellido }}</div>
                <div class="logOut"><a href="{{ path('app_logout') }}">Cerrar sesión</a></div>
            {% endif %}
        </header>
        <div id="rutas">{% block rutas %}<span>Home</span>{% endblock %}</div>
        <div id="pestanias">{% block pestanias %}{% endblock %}</div>
        <section>
            <nav>
                <a href='{{ path('categorias_index') }}'>
                    <img src='{{ asset('images/iconos/menu/categorias.svg')}}' alt='Categorías' />
                    CATEGORÍAS
                </a>
                <a href='{{ path('productos_index') }}'>
                    <img src='{{ asset('images/iconos/menu/productos_off.png')}}' alt='Productos' />
                    PRODUCTOS
                </a>
                {#}
                <a href={{ path('usuarios_index') }}>
                    <img src='{{ asset('images/iconos/menu/usuarios_off.png')}}' alt='Usuarios' />
                    USUARIOS
                </a>
                {#}
            </nav>
            <div id="container">
                {% block contenido %}Bienvenido al sistema de Ferretería Antártida{% endblock %}
            </div>
        </section>
        <footer>
            Ferretería Antártida | &copy; Todos los derechos reservados - 2021
        </footer>

        <script> (function() { oGen.load(); })(); </script>
    </body>
</html>
