{% extends 'base.html.twig' %}

{% block title %}Alertas - {% endblock %}

{% block rutas %}<span>Alertas</span>{% endblock %}

{% block contenido %}
    
    <h1>Productos sin categor√≠as asociadas</h1>
    <br/><br/>
    <table class="tablaListados">
        <thead>
            <tr>
                <th>ID</th>
                <th>ID EXTERNO</th>
                <th>PRODUCTO</th>
                <th>PRECIO</th>
                <th>HABILITACION</th>
                <th>ACCIONES</th>
            </tr>
        </thead>
        <tbody>
        {% for psc in productosSinCategorias %}
            <tr>
                <td>{{ psc.id }}</td>
                <td>{{ psc.id_externo }}</td>
                <td>{{ psc.nombre }}</td>
                <td>${{ psc.precio|number_format(2, ',', '.') }}</td>
                <td>{{ (psc.habilitado == 1) ? 'Habilitado' : 'Deshabilitado' }}</td>
                <td>
                    <a href="{{ path('productos_edit', {'id': psc.id}) }}">
                        <img src="{{asset('images/iconos/editar_off.png')}}" alt="" />
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No se encontraron productos sin categorias.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br/><br/><br/><br/>
